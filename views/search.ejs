    <% if (recipes && recipes.length> 0) { %>
        <h2 class="form-text mt-4">Search Results for:</h2>
        <div class="row">
            <% recipes.forEach(recipe=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= recipe.image %>" class="card-img-top" alt="<%= recipe.title %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= recipe.title %>
                            </h5>
                            <a href="/recipe/<%= recipe.id %>?servings=<%= defaultServings %>"
                                class="btn btn-primary">View
                                Recipe</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
        <% } else if (recipes) { %>
            <p class="text-danger mt-4">No recipes found for your search. Please try again!</p>
            <% } %>
