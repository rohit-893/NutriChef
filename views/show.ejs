 <!-- Navbar -->
 



<div class="container my-5">
    <!-- Recipe Title -->
    <div class="row">
        <div class="col text-center">
            <h1 class="mb-4">
                <%= recipe.title %>
            </h1>
        </div>
    </div>

    <!-- Recipe Image and Nutrition Label -->
    <div class="row">
        <div class="col-md-6">
            <img src="<%= recipe.image %>" alt="<%= recipe.title %>" class="img-fluid rounded shadow">
            <!-- Recipe Details -->
            <div class="row my-4">
                <div class="col-md-6">
                    <form action="/recipe/<%= recipe.id %>" method="get">
                        <p><strong>Servings:
                                <input type="number" name="servings" style="width: 70px"
                                    value="<%= desiredServings%>">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </strong>
                        </p>
                    </form>
                    <p><strong>Ready in:</strong>
                        <%= scaledReadyInMinutes %> minutes
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Source:</strong> <a href="<%= recipe.sourceUrl %>" target="_blank">View Original
                            Recipe</a></p>
                </div>
            </div>

            <!-- Ingredients -->
            <div class="row my-4">
                <div class="col">
                    <h3>Ingredients</h3>
                    <ul class="list-group">
                        <% scaledIngredients.forEach(i=> { %>
                            <li class="list-group-item">
                                <%= i.scaledAmount.toFixed(1) %>
                                    <%= i.unit %> - <%= i.originalName %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <%- nutritionLabel %>
            </div>
        </div>
    </div>



    <!-- Instructions -->
    <div class="row my-4">
        <div class="col">
            <h3>Instructions</h3>
            <p>
                <%- recipe.instructions %>
            </p>
        </div>
    </div>

    <!-- Back Buttons -->
    <div class="row">
        <div class="col text-center">
            <a href="/" class="btn btn-primary mx-2">Back to Home</a>
            <a href="javascript:history.back()" class="btn btn-secondary mx-2">Back to Search</a>
        </div>
    </div>
</div>

