<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>
        <%= recipe.title %> - Recipe Details
    </title>
</head>

<body>
    <div class="container my-5">
        <!-- Recipe Title -->
        <div class="row">
            <div class="col text-center">
                <h1 class="mb-4">
                    <%= recipe.title %>
                </h1>
            </div>
        </div>

        <!-- Recipe Image and Nutrition Label -->
        <div class="row">
            <div class="col-md-6">
                <img src="<%= recipe.image %>" alt="<%= recipe.title %>" class="img-fluid rounded shadow">
                <!-- Recipe Details -->
                <div class="row my-4">
                    <div class="col-md-6">
                        <form action="/recipe/<%= recipe.id %>" method="get">
                            <p><strong>Servings:
                                    <input type="number" name="servings" style="width: 70px"
                                        value="<%= desiredServings%>" min="1" max="25">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </strong>
                            </p>
                        </form>
                        <p><strong>Ready in:</strong>
                            <%= recipe.readyInMinutes %> minutes
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Source:</strong> <a href="<%= recipe.sourceUrl %>" target="_blank">View Original
                                Recipe</a></p>
                    </div>
                </div>

                <!-- Ingredients -->
                <div class="row my-4">
                    <div class="col">
                        <h3>Ingredients</h3>
                        <ul class="list-group">
                            <% scaledIngredients.forEach(i=> { %>
                                <li class="list-group-item">
                                    <%= i.scaledAmount.toFixed(1) %>
                                        <%= i.unit %> - <%= i.originalName %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <%- nutritionLabel %>
                </div>
            </div>
        </div>



        <!-- Instructions -->
        <div class="row my-4">
            <div class="col">
                <h3>Instructions</h3>
                <p>
                    <%- recipe.instructions %>
                </p>
            </div>
        </div>

        <!-- Back Buttons -->
        <div class="row">
            <div class="col text-center">
                <a href="/" class="btn btn-primary mx-2">Back to Home</a>
                <a href="javascript:history.back()" class="btn btn-secondary mx-2">Back to Search</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>